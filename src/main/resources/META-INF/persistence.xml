<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="webjpa">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>api.database.beans.tables.Browser</class>
		<class>api.database.beans.tables.Failure</class>
		<class>api.database.beans.tables.OperationSystem</class>
		<class>api.database.beans.tables.Resolution</class>
		<class>api.database.beans.tables.ResolutionHistory</class>
		<class>api.database.beans.tables.RunConfiguration</class>
		<class>api.database.beans.tables.RunHost</class>
		<class>api.database.beans.tables.Screenshot</class>
		<class>api.database.beans.tables.Suite</class>
		<class>api.database.beans.tables.SuiteExec</class>
		<class>api.database.beans.tables.Test</class>
		<class>api.database.beans.tables.TestExec</class>
		<class>api.database.beans.tables.TestExecFailure</class>
		<class>api.database.beans.tables.TestStep</class>
		<class>api.database.beans.tables.User</class>
		<class>api.database.beans.tables.Configuration</class>
		<class>api.database.beans.tables.FailuresStats</class>

		<properties>
			<!--  This configuration does not create tables -->
			<property name="hibernate.ejb.cfgfile" value="/META-INF/hibernate.cfg.xml"/>

		</properties>
	</persistence-unit>
</persistence>
